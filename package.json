{
  "name": "floimg-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "floimg monorepo - universal image workflow engine for developers and AI agents",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:studio": "pnpm --filter '@floimg-studio/*' --parallel dev",
    "build:studio": "pnpm --filter '@floimg-studio/*' build",
    "test": "pnpm -r test",
    "test:unit": "pnpm exec vitest --run --project unit",
    "test:integration": "pnpm exec vitest --run --project integration",
    "test:studio": "pnpm exec vitest --run --project studio",
    "test:coverage": "pnpm exec vitest --run --coverage",
    "test:watch": "pnpm exec vitest",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src apps/**/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.ts\" \"apps/**/src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\" \"apps/**/src/**/*.{ts,tsx}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky",
    "audit": "pnpm audit",
    "audit:deprecated": "pnpm install --dry-run 2>&1 | grep -i 'deprecated' && exit 1 || echo 'âœ… No deprecated dependencies'",
    "prerelease": "pnpm audit:deprecated && pnpm typecheck && pnpm test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "image",
    "generation",
    "monorepo"
  ],
  "author": "Brett Cooke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamFlojo/floimg.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "openai": "^6.0.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@teamflojo/floimg": ">=0.2.0"
      }
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
